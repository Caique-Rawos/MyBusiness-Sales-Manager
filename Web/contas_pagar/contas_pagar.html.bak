<!DOCTYPE html>
<html>
  <head>
    <title>Contas a Pagar</title>
    <link rel="stylesheet" href="contas_pagar/style.css" />
  </head>
  <body>
    <div class="container">
      <h1 class="text-center mt-3 page-title">Contas a Pagar</h1>
      <form id="paymentForm">
	  <div class="row">
          <div class="col-sm-12 col-md-2">
            <div class="mb-3 form-group">
		<label for="codigo" class="form-label">Código</label>
        <input
		type="text" 
		class="form-control" 
		id="codigo" 
		name="codigo" 
		readonly
		/>
		 </div>
          </div>
          <div class="col-sm-12 col-md-9">
            <div class="mb-3 form-group">
	    <label for="descricao" class="form-label">Descrição:</label>
        <input
          type="text"
		  class="form-control"
          id="descricao"
          name="descricao"
          maxlength="150"
		  required
        />
		 </div>
          </div>
		   <div class="col-sm-12 col-md-3">
            <div class="mb-3 form-group">
        <label for="valorTotal" class="form-label">Valor Total:</label>
        <input
          type="number"
		  class="form-control"
          step="0.01"
          id="valorTotal"
          name="valorTotal"
          required
        />
		</div>
          </div>
 <div class="col-sm-12 col-md-3">
            <div class="mb-3 form-group">
        <label for="valorPago" class="form-label">Valor Pago:</label>
        <input
          type="number"
		  class="form-control"
          step="0.01"
          id="valorPago"
          name="valorPago"
          value="0"
          readonly
        />
		</div>
          </div>
 <div class="col-sm-12 col-md-4">
            <div class="mb-3 form-group">
        <label for="dataVencimento" class="form-label">Data de Vencimento:</label>
        <input
          type="datetime-local"
		  class="form-control"
          id="dataVencimento"
          name="dataVencimento"
          required
        />
		</div>
          </div>
        <div class="col-sm-12 col-md-4">
        <div class="mb-3 form-group">
        <label for="id_status_pagamento" class="form-label">Status do Pagamento:</label>
        <select
          class="form-select"
		  class="form-control"
          id="id_status_pagamento"
          name="id_status_pagamento"
        />
          <option value="1" selected>Aberto</option>
        </select>
        </div>
          </div>
        <!-- <input
          type="number"
          id="id_status_pagamento"
          name="id_status_pagamento"
          required
        /> -->
        <div class="col-sm-12 col-md-4">
        <div class="mb-3 form-group">
        <label for="id_forma_pagamento"  class="form-label">Forma de Pagamento:</label>
        <select
          class="form-select"
		  class="form-control"
          id="id_forma_pagamento"
          name="id_forma_pagamento"
        >
          <option value="1" selected>Dinheiro</option>
          <option value="2">Cartão de Credito</option>
        </select>
		</div>
          </div>
		  </div>
        <!-- <input
          type="number"
          id="id_forma_pagamento"
          name="id_forma_pagamento"
          required
        /> -->

        <input type="submit" class="mt-3" value="Enviar" />
      </form>

      <div id="result"></div>
    </div>

    <script src="contas_pagar/script.js"></script>
  </body>
</html>
